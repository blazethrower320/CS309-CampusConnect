<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <!-- Main content (your current layout) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ccprofilepage"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top bar with hamburger button -->
        <!-- Top bar with hamburger button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/menubar_layout"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back"
                android:backgroundTint="#FFFFFF" />

            <!-- FIX: Added layout_weight and adjusted margins -->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="View All Users"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- FIX: Removed unnecessary margins -->
            <ImageButton
                android:id="@+id/spacer"
                android:layout_width="30dp"
                android:clickable="false"
                android:layout_height="30dp"
                android:background="@drawable/clear_btn"
                app:tint="@color/white"/>
        </LinearLayout>

        <!-- Existing main content -->
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:background="@drawable/layout_bg">



            <!-- Layouts for text fields-->
            <LinearLayout
                android:id="@+id/filter_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginTop="12dp">

                <Spinner
                    android:id="@+id/role_spinner"
                    android:layout_width="0dp"
                    android:layout_weight="0.39"
                    android:layout_height="48dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:popupBackground="#FFFFFF"/>

                <SearchView
                    android:id="@+id/user_search_view"
                    style="@style/DarkInputField"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:layout_height="48dp"
                    android:queryHint="Search Username"
                    android:textColorHint="#FFFFFF"
                    android:iconifiedByDefault="false"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>


            <!-- START: NEW PAST SESSIONS SECTION -->
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/nestedlayout_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <TextView
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="left"
                    android:paddingLeft="15dp"
                    android:layout_width="wrap_content"
                    android:text="Users:"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

                <!-- This RecyclerView will display the scrollable list of session cards -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/past_sessions_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:nestedScrollingEnabled="true"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>
            <!-- END: NEW PAST SESSIONS SECTION -->



        </LinearLayout>
    </LinearLayout>

    <!-- Sidebar / Navigation Drawer -->
    <LinearLayout
        android:id="@+id/nav_view"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#2E2E3A"
        android:paddingTop="60dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:src="@drawable/outline_home"
                android:contentDescription="Home"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Sessions -->
        <LinearLayout
            android:id="@+id/nav_sessions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:src="@drawable/ic_schedule"
                android:contentDescription="Sessions"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sessions"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:src="@drawable/baseline_account_circle_24"
                android:contentDescription="Profile"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Reviews -->
        <LinearLayout
            android:id="@+id/nav_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:src="@drawable/outline_award_star"
                android:contentDescription="Reviews"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reviews"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:id="@+id/nav_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:src="@drawable/gear"
                android:contentDescription="Settings"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>

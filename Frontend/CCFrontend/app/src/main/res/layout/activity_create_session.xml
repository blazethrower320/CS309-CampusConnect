<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#5B5B5B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Back button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:tint="#FFFFFF" />

        <!-- Page title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Session"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp" />

        <!-- Input fields -->
        <EditText
            android:id="@+id/edit_class_name"
            style="@style/DarkInputField"
            android:hint="Class Name (e.g Computer Science 311)"
            android:inputType="text" />

        <EditText
            android:id="@+id/edit_class_code"
            style="@style/DarkInputField"
            android:hint="Class Code (e.g COMS311)"
            android:inputType="text" />

        <EditText
            android:id="@+id/edit_meeting_location"
            style="@style/DarkInputField"
            android:hint="Meeting Location (e.g Pearson Hall 203)"
            android:inputType="text" />

        <EditText
            android:id="@+id/edit_meeting_time"
            style="@style/DarkInputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Meeting Time"
            android:focusable="false"
            android:clickable="true" />

        <!-- Create Session Button -->
        <Button
            android:id="@+id/button_create_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Session"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFF"
            android:textStyle="bold"
            android:elevation="4dp"
            android:padding="10dp" />

    </LinearLayout>
</ScrollView>
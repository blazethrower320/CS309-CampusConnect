<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <!-- Main content (your current layout) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ccprofilepage"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top bar with hamburger button -->
        <!-- Top bar with hamburger button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/menubar_layout"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/cancel_button"
                app:tint="@color/red"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/outline_cancel_24"
                android:contentDescription="Menu" />

            <!-- FIX: Added layout_weight and adjusted margins -->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="Edit Profile"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- FIX: Removed unnecessary margins -->
            <ImageButton
                android:id="@+id/confirm_btn"
                android:layout_width="35dp"
                android:clickable="true"
                android:layout_height="match_parent"
                android:background="@drawable/clear_btn"
                android:src="@drawable/outline_check_24"
                app:tint="@color/green"/>
        </LinearLayout>

        <!-- Existing main content -->
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:background="@drawable/layout_bg">

            <!-- Role -->
            <TextView
                android:id="@+id/role_text"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Role"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"/>
            <!-- Profile Picture -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/baseline_account_circle_24"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"/>
            <!-- END: ADDED PROFILE PICTURE -->


            <!-- Name -->
            <TextView
                android:id="@+id/name_text"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="FirstName Lastname"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <!-- Username -->
            <TextView
                android:id="@+id/username_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:text="Username"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />





            <!-- Layouts for text fields-->
            <LinearLayout
                android:background="@drawable/nestedlayout_bg"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="100dp">

                <TextView
                    android:paddingTop="5dp"
                    android:layout_gravity="left"
                    android:paddingLeft="15dp"
                    android:layout_width="wrap_content"
                    android:text="Bio: "
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:id="@+id/edit_bio_text"
                    android:layout_width="wrap_content"
                    android:text="Enter Bio Text Here"
                    android:textColor="@color/white"
                    android:layout_marginTop="22dp"
                    android:textSize="12dp"
                    android:layout_height="wrap_content">

                </EditText>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/nestedlayout_bg"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="40dp">

                <TextView
                    android:paddingTop="5dp"
                    android:layout_gravity="center"
                    android:paddingLeft="15dp"
                    android:layout_width="wrap_content"
                    android:text="Major: "
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:id="@+id/edit_major_text"
                    android:layout_width="wrap_content"
                    android:text="Enter Major Here"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:layout_height="wrap_content">

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/nestedlayout_bg"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="40dp">

                <TextView
                    android:paddingTop="5dp"
                    android:layout_gravity="center"
                    android:paddingLeft="15dp"
                    android:layout_width="wrap_content"
                    android:text="Classification: "
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:id="@+id/edit_classification_text"
                    android:layout_width="wrap_content"
                    android:text="Enter Classification Here"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:layout_height="wrap_content">

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/nestedlayout_bg"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:paddingTop="5dp"
                    android:layout_gravity="left"
                    android:paddingLeft="15dp"
                    android:layout_width="wrap_content"
                    android:text="Contact Information:"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content">

                </TextView>
                <EditText
                    android:id="@+id/edit_contactInfo_text"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_height="wrap_content"
                    android:text="Enter Contact Information Here"
                    android:textColor="@color/white"
                    android:textSize="12dp">
                </EditText>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>




</androidx.drawerlayout.widget.DrawerLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/gradient_bg">

    <LinearLayout
        android:layout_width="302dp"
        android:layout_height="600dp"
        android:background="#63666A"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/responseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Response"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- Response message -->
        <TextView
            android:id="@+id/msgResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Waiting for request..."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Mock Request button -->
        <Button
            android:id="@+id/btnStringReq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/btn_primary"
            android:elevation="6dp"
            android:padding="12dp"
            android:text="Mock Request"
            android:textColor="@android:color/white" />

        <!-- Username Request button -->
        <Button
            android:id="@+id/mjrReqBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_primary"
            android:elevation="6dp"
            android:padding="12dp"
            android:text="Username Request"
            android:textColor="@android:color/white" />

        <!-- Password Request button -->
        <Button
            android:id="@+id/passReqBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_primary"
            android:elevation="6dp"
            android:padding="12dp"
            android:text="Password Request"
            android:textColor="@android:color/white" />

        <!-- Back button -->
        <Button
            android:id="@+id/backStrReqBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_outline"
            android:elevation="4dp"
            android:text="Back"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="17dp"
    android:orientation="horizontal"
    android:background="@drawable/session_item_background"
    android:backgroundTint="#3F4C95"
    android:layout_marginVertical="6dp"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/account_circle"
        android:contentDescription="Profile picture"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:focusable="true"
        app:tint="@android:color/white" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tutor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elynn Lee"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/meeting_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Software Development Practices â€” 2:30 PM"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- right side vertical -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|end">

        <TextView
            android:id="@+id/session_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pearson Hall"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messages"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:backgroundTint="@android:color/white"
            android:paddingHorizontal="12dp"
            android:paddingVertical="0dp"
            android:layout_marginTop="6dp" />
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F2F5"
    tools:context=".ChatActivity">

    <!-- This is the top toolbar -->
    <LinearLayout
        android:background="@color/msgbg"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/back_btn"
            android:background="@drawable/btn_secondary"
            android:src="@drawable/ic_arrow_back"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/chat_name_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Chat Name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- This is an invisible "spacer" view to balance the layout -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>


    <!-- This RecyclerView will display the list of messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/darkgray"
        android:id="@+id/messages_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        app:stackFromEnd="true"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- This layout holds the message input field and send button at the bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@color/msgbg">

        <ImageButton
            android:id="@+id/attatchment_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:background="@color/msgbg"
            android:contentDescription="Attach file" />

        <EditText
            android:id="@+id/message_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type a message"
            android:textColor="@color/white"
            android:maxLines="4"
            android:inputType="textMultiLine|textCapSentences"
            android:background="@color/darkgray"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/send_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_send"
            android:background="@color/msgbg"
            android:contentDescription="Send message"
            app:tint="@color/design_default_color_primary" />

    </LinearLayout>

</LinearLayout>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false">

    <!-- Main container inside CardView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/session_item_background">

        <!-- Top Section: Class Name + Tutor + Join Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/class_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="COM S 309"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tutor_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tutor: Loading..."
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginStart="12dp" />

            <TextView
                android:id="@+id/btn_join_session"
                android:background="@drawable/session_join_button_background"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="20dp"
                android:text="Join"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />
        </LinearLayout>

        <!-- Class Title -->
        <TextView
            android:id="@+id/class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Software Development Practices"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="6dp" />



        <!-- Location and Time Row -->
        <!-- Location + Time + Edit Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <!-- LEFT SIDE: Location + Time stacked horizontally -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

                <!-- Location icon + text -->
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/outline_location"
                    app:tint="#FFFFFF"/>

                <TextView
                    android:id="@+id/meeting_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coover 101"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <!-- Space between location and time -->
                <Space
                    android:layout_width="16dp"
                    android:layout_height="match_parent" />

                <!-- Time icon + text -->
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/outline_alarm"
                    app:tint="#FFFFFF"/>

                <TextView
                    android:id="@+id/meeting_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fridays 3:00 PM"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- RIGHT SIDE: Edit button -->
            <TextView
                android:id="@+id/button_edit_session"
                android:layout_width="60dp"
                android:layout_height="38dp"
                android:background="@drawable/session_join_button_background"
                android:gravity="center"
                android:text="Edit"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:padding="6dp"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
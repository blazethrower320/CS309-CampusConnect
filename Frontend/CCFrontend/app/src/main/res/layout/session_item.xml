<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/session_item_background"
    android:layout_marginVertical="8dp"
    android:elevation="4dp">

    <!-- Class Name -->
    <TextView
        android:id="@+id/class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COM S 309"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp" />

    <!-- Class Code -->
    <TextView
        android:id="@+id/class_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Software Development Practices"
        android:textColor="#222222"
        android:textSize="16sp"
        android:layout_marginTop="4dp" />

    <!-- Tutor -->
    <TextView
        android:id="@+id/tutor_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutor: Loading..."
        android:textColor="#444444"
        android:textSize="15sp"
        android:layout_marginTop="6dp" />

    <!-- Horizontal Row: Location + Time -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/meeting_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: Coover 101"
            android:textColor="#444444"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/meeting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" â€¢ Fridays 3:00 PM"
            android:textColor="#444444"
            android:textSize="15sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
